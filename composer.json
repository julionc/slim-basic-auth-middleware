{
  "name": "julionc/slim-basic-auth-middleware",
  "type": "library",
  "description": "HTTP Basic Authentication Middleware for Slim Framework",
  "keywords": [
    "slim",
    "middleware",
    "auth",
    "http"
  ],
  "license": "MIT",
  "authors": [
    {
      "name": "Julio Napuri",
      "email": "julionc@gmail.com"
    }
  ],
  "require": {
    "php": ">=5.4.0",
    "pimple/pimple": "~3.0",
    "psr/http-message": "1.0"
  },
  "require-dev": {
    "phpunit/phpunit": "*",
    "slim/slim": "3.x-dev"
  },
  "autoload": {
    "psr-4": {
      "Slim\\HttpBasicAuth\\": "src"
    }
  },
  "autoload-dev": {
    "psr-4": {
      "Slim\\HttpBasicAuth\\Tests\\": "tests"
    }
  }
}